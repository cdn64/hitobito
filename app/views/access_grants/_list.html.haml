= crud_table do |t|
  - t.col(t.sort_header(:application, Oauth::Application.model_name.human)) do |access_grant|
    - access_grant.application.name
  - t.col(t.sort_header(:scopes)) do |access_grant|
    - access_grant.scopes.each do |scope|
      = Oauth::Application.human_scope(scope)
      %br
  - t.sortable_attr(:created_at)
  - action_col_destroy(t) { |e| access_grant_path(e) }
